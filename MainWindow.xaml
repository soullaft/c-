<Controls:MetroWindow x:Class="Vesna.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        Icon="Images/logo.png"
        xmlns:local="clr-namespace:Vesna"
        Closed="MetroWindow_Closed"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Весна" Height="500" Width="850">
    <Grid>

        <Controls:MetroAnimatedSingleRowTabControl x:Name="menu">
            <Controls:MetroTabItem Header="Склад" x:Name="sklad"/>
            <Controls:MetroTabItem Header="Сотрудники" x:Name="users"/>
            <Controls:MetroTabItem Header="Клиенты" x:Name="clients"/>
            <Controls:MetroTabItem Header="История" x:Name="history"/>
        </Controls:MetroAnimatedSingleRowTabControl>
    </Grid>
</Controls:MetroWindow>
